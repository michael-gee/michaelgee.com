---
import { Image as AstroImage } from 'astro:assets';

export interface Props {
	src: string;
	width: number;
	height: number;
	alt: string;
}

const { src, width, height, alt } = Astro.props;
---

<AstroImage
	src={src}
	width={width}
	height={height}
	alt={alt}
	class="w-2xl mx-auto flex max-w-full py-6"
/>
