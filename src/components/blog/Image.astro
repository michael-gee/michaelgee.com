---
import { Image } from '@astrojs/image/components';

export interface Props {
	src: string;
	width: number;
	height: number;
	alt: string;
}

const { src, width, height, alt } = Astro.props;
---

<Image
	src={src}
	width={width}
	height={height}
	alt={alt}
	class="flex w-2xl max-w-full mx-auto py-6"
/>
