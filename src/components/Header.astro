---
import MenuButton from './MenuButton.tsx';
import { Icon } from 'astro-icon';
---

<header class="fixed w-full z-50 font-semibold">
	<div
		class="max-w-6xl border-x-2 border-zinc-700/40 bg-zinc-900 mx-auto flex items-center justify-between py-4 px-4 md:px-12"
	>
		<a href="/" class="flex items-center hover:text-red-600">
			<Icon pack="mdi" name="leaf-maple" class="w-8 h-8 mr-3 text-red-600" />
			<h2 class="text-2xl">Michael Gee</h2>
		</a>

		<nav class="hidden items-center py-3 md:flex">
			<div class="pr-2 border-r-2 border-zinc-700 px-3">
				<a href="/about" class="text-zinc-300 mx-2 hover:text-sky-400">About</a>
				<a href="/blog" class="text-zinc-300 mx-2 hover:text-sky-400">Blog</a>
				<a href="/portfolio" class="text-zinc-300 mx-2 hover:text-sky-400">Portfolio</a>
			</div>

			<div class="flex items-center ml-2">
				<a
					href="https://www.reddit.com/user/michaelg33"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer mr-2 ml-3 hover:text-white"
				>
					<Icon pack="dashicons" name="reddit" class="w-6 h-6" />
				</a>

				<a
					href="https://github.com/michael-gee"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer mr-5 ml-3 hover:text-white"
				>
					<Icon pack="mdi" name="github" class="w-6 h-6" />
				</a>

				<a
					href="https://x.com/michaelgee_"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer hover:text-white"
				>
					<svg
						aria-label="X formerly known as Twitter"
						fill="currentColor"
						height="16"
						viewBox="0 0 22 20"
					>
						<path
							d="M16.99 0H20.298L13.071 8.26L21.573 19.5H14.916L9.702 12.683L3.736 19.5H0.426L8.156 10.665L0 0H6.826L11.539 6.231L16.99 0ZM15.829 17.52H17.662L5.83 1.876H3.863L15.829 17.52Z"
						>
						</path>
					</svg>
				</a>
			</div>
		</nav>

		<MenuButton url={Astro.url} client:visible>
			<div class="flex items-center justify-evenly mt-2 py-3 border-t border-zinc-700/40">
				<a
					href="https://www.reddit.com/user/michaelg33"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer hover:text-white"
				>
					<Icon pack="dashicons" name="reddit" class="w-6 h-6" />
				</a>

				<a
					href="https://github.com/michael-gee"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer hover:text-white"
				>
					<Icon pack="mdi" name="github" class="w-6 h-6" />
				</a>

				<a
					href="https://x.com/michaelgee_"
					target="_blank"
					rel="noopener noreferrer"
					class="text-zinc-300 rounded-full cursor-pointer hover:text-white"
				>
					<svg
						aria-label="X formerly known as Twitter"
						fill="currentColor"
						height="16"
						viewBox="0 0 22 20"
					>
						<path
							d="M16.99 0H20.298L13.071 8.26L21.573 19.5H14.916L9.702 12.683L3.736 19.5H0.426L8.156 10.665L0 0H6.826L11.539 6.231L16.99 0ZM15.829 17.52H17.662L5.83 1.876H3.863L15.829 17.52Z"
						>
						</path>
					</svg>
				</a>
			</div>
		</MenuButton>
	</div>
</header>
