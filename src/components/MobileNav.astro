---
import MenuButton from './MenuButton.tsx';
import { Icon } from 'astro-icon/components';
---

<MenuButton url={Astro.url} client:visible>
  <div class="mt-2 flex items-center justify-evenly border-t border-zinc-700/40 py-3">
    <a
      href="https://michaelgee.com/rss.xml"
      target="_blank"
      rel="noopener noreferrer"
      class="cursor-pointer rounded-full text-zinc-300 hover:text-white"
    >
      <Icon name="mdi:rss" class="h-6 w-6" />
    </a>

    <a
      href="https://github.com/michael-gee"
      target="_blank"
      rel="noopener noreferrer"
      class="cursor-pointer rounded-full text-zinc-300 hover:text-white"
    >
      <Icon name="mdi:github" class="h-6 w-6" />
    </a>

    <a
      href="https://x.com/michaelgee_"
      target="_blank"
      rel="noopener noreferrer"
      class="cursor-pointer rounded-full text-zinc-300 hover:text-white"
    >
      <svg
        aria-label="X formerly known as Twitter"
        fill="currentColor"
        height="16"
        viewBox="0 0 22 20"
      >
        <path
          d="M16.99 0H20.298L13.071 8.26L21.573 19.5H14.916L9.702 12.683L3.736 19.5H0.426L8.156 10.665L0 0H6.826L11.539 6.231L16.99 0ZM15.829 17.52H17.662L5.83 1.876H3.863L15.829 17.52Z"
        >
        </path>
      </svg>
    </a>
  </div>
</MenuButton>
