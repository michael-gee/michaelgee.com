---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Container from '@components/PageContainer.astro';
import Engage from '@components/Engage.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate: string;
	};
}

const {
	content: { title, description, pubDate }
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="w-full bg-black text-white">
		<Header />

		<Container>
			<article class="leading-relaxed tracking-wide px-4 pt-6">
				<time datetime={pubDate} class="block text-center text-zinc-400 text-sm mb-3"
					>{pubDate}
				</time>

				<h1
					class="flex w-full max-w-fit mx-auto text-2xl text-center sm:text-4xl sm:leading-tight mb-6 font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-rose-500"
				>
					{title}
				</h1>

				<slot />
			</article>

			<div class="max-w-lg mx-auto my-10">
				<Engage />
			</div>
		</Container>
	</body>
</html>
